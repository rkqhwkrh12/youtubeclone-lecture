extends ../base.pug
include ../mixins/video 

block content 
    div.profile__data
        if loggedInUser.socialOnly 
             img.avatar(src= user.avatarUrl, crossorigin="use-credentials")
        else 
            img(src="/" + user.avatarUrl,crossorigin="use-credentials").avatar
        h3=user.name
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No videos found 